<section id="details-page">

    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">

                <h1>{{movie.title}}</h1>
                <div class="card-movie">
                    <div class="first-info">
                        <p class="card-genre">Genre: {{movie.genre}}</p>
                        <p class="card-director">Directror: {{movie.director}}</p>
                    </div>
                    <div class="second-info">
                        <p class="card-year">Year: {{movie.year}}</p>
                        <p class="card-ranking">Rating: <span id="stars">{{{movie.rating}}}</span></p>
                    </div>

                </div>

                <p class="disc">Description: {{movie.description}}</p>
            </div>
            {{#if isOwner}}
            <div class="social-btn">
                <a id="edit-button" href="/movies/{{movie._id}}/edit">Edit</a>
                <a id="delete-button" href="/movies/{{movie._id}}/delete">Delete</a>
            </div>
            {{/if}}
        </div>
        <div class="card_right">
            <img src="{{movie.imageURL}}" alt="image">
        </div>
    </div>
    <div class="main-cast-card">
        {{#if isCasts}}
        {{#each movie.casts}}
        <div class="cast-card">
            <div class="card-img">
                <img src="{{castImg}}" alt="{{name}}">
            </div>
            <div class="cast-info">
                <h1>{{name}}</h1>
                <h3>Age: {{age}}</h3>
                <h3>Born: {{born}}</h3>
                <h3>Name in Movie: {{nameInMovie}}</h3>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="cast-info">
            <p>There are no casts added yet...</p>
        </div>
        {{/if}}
    </div>
</section>