{{#if errors}}
<div class="error-container">
    {{#each errors}}
    <p>{{this}}</p>
    {{/each}}
</div>
{{/if}}
<section id="login-page">

    <div class="loginSection">
        <div class="info">
            <h2>"My mama always said life was like a box of chocolates. You never know what you're gonna get."</h2>
        </div>
        <form  method="post" class="loginForm">
            <h2>Login</h2>
            <ul class="noBullet">
                <li {{#if errors.email}}class="error"{{/if}}>
                    <label for="email">Email:</label>
                    <input type="text" class="inputFields" id="email" name="email" value="{{fields.email}}" />
                </li>
                <li {{#if errors.password}}class="error"{{/if}}>
                    <label for="password">Password:</label>
                    <input type="password" class="inputFields" id="password" name="password"/>
                </li>

                <li id="center-btn">
                    <button type="submit" id="login-btn">Login</button>
                </li>
            </ul>
        </form>
    </div>

</section>